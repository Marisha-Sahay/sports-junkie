<div class="profile-container">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="profile-details">
      <div class="profile-head">
        <h1><%= @profile.first_name%>'s Profile</h1>
        <h3>Sports <%= @profile.first_name%> is interested in - </h3>
      </div>
        <% @profile.teams.each do |team|%>
        <div class="sport-name"><%= team.sport_name %></div>
          <% team.members.each do |member| %>
            <% if member.id == @profile.id %>
            <% else %>
              <li class="profile-name"><%= link_to member.first_name, "/profile/#{member.id}" %></li>
            <% end %>
          <% end %>
      <% end %>
    </div>
  </div>
  <%= form_tag "/profile/#{@profile.id}", method: :patch do%>
    <form class="form-horizontal">
      <div class="row">
        <div class="form-group">
          <div class="col-sm-5 inputs-group">
            <%=label_tag :first_name %>
            <%=text_field_tag :first_name,@profile.first_name, class:"form-control" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="form-group">
          <div class="col-sm-5 inputs-group">
            <%=label_tag :last_name %>
            <%=text_field_tag :last_name,@profile.last_name, class:"form-control" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="form-group">
          <div class="col-sm-5 inputs-group">
            <%=label_tag :Height %>
            <%=text_field_tag :height,@profile.height, class:"form-control" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="form-group">
          <div class="col-sm-5 inputs-group">
            <%=label_tag :weight %>
            <%=text_field_tag :weight,@profile.weight, class:"form-control" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="form-group">
          <div class="col-sm-5 inputs-group">
            <%=label_tag :email %>
            <%=text_field_tag :email,@profile.email, class:"form-control" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="form-group">
          <div class="col-sm-5 inputs-group">
            <%=label_tag :password %>
            <%=password_field_tag :password,"", class:"form-control" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="form-group">
          <div class="col-sm-5 inputs-group">
            <%=label_tag :password_confirmation %>
            <%=password_field_tag :password_confirmation,"", class:"form-control"  %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="form-group">
          <div class="col-sm-5 inputs-group">
            <%= select_tag "sports",options_from_collection_for_select(@teams, "id", "sport_name"),multiple: true, prompt: 'Please select the sport you like: '%>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="form-group">
          <div class="col-sm-5 inputs-group">
            Make private? <%= check_box_tag 'tos', 'yes', false, class: 'accept_tos'%>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="form-group">
          <div class="col-sm-5 inputs-group">
            <h3>Enter sports participation data: </h3>
            <%=label_tag :Date %>
            <%= date_field_tag :date, Date.today %></p>
            Sport: <%= collection_select :team, :sport_name, Team.all, :id, :sport_name, multiple: true,:prompt => 'Select sport you participated'%>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="form-group">
          <div class="col-sm-3 inputs-group">
            <%= label_tag :Duration_of_participation%>
            <%= text_field_tag :duration,"", class:"form-control"%>
          </div>
        </div>
      </div>
      <div class="button">
        <%= button_tag "<span> Update Your Account</span>".html_safe, class: "btn primary-btn"%>
      </div>
    </form>
  <%end%>
</div>